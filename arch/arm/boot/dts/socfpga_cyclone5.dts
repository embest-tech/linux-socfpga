/dts-v1/;
/include/ "socfpga.dtsi"

/ {
	model = "Altera SOCFPGA Cyclone V";
	compatible = "altr,socfpga-cyclone5", "altr,socfpga";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootwait";
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x40000000>; /* 1 GB */
	};

	aliases {
		/* this allow the ethaddr uboot environmnet variable contents
		 * to be added to the gmac1 device tree blob.
		 */
		ethernet0 = &gmac1;
	};

	soc {
		clkmgr@ffd04000 {
			clocks {
				osc1 {
					clock-frequency = <25000000>;
				};
			};
		};

		dcan0: d_can@ffc00000 {
			status = "okay";
		};

		dwmmc0@ff704000 {
			num-slots = <1>;
			supports-highspeed;
			broken-cd;
			altr,dw-mshc-ciu-div = <3>;
			altr,dw-mshc-sdr-timing = <0 3>;

			slot@0 {
				cd-gpios = <&gpio1 18 0>;
				reg = <0>;
				bus-width = <4>;
			};
		};

		ethernet@ff702000 {
			phy-mode = "rgmii";
			phy-addr = <0xffffffff>; /* probe for phy addr */
			status = "okay";
		};

		gpio@ff708000 {
			status = "okay";
		};

		gpio@ff709000 {
			status = "okay";
		};

		gpio@ff70a000 {
			status = "okay";
		};

		i2c0: i2c@ffc04000 {
			speed-mode = <0>;
			status = "okay";
		};

		serial0@ffc02000 {
			status = "okay";
		};

		sysmgr@ffd08000 {
			cpu1-start-addr = <0xffd080c4>;
		};

		usb1: usb@ffb40000 {
			status = "okay";
		};

		watchdog0: wd@ffd02000 {
			status = "okay";
		};

	};
};

&i2c0 {
	/*
	 * adjust the falling times to decrease the i2c frequency to 50Khz
	 * because the LCD module does not work at the standard 100Khz
	 */
	i2c-sda-falling-time-ns = <5000>;
	i2c-scl-falling-time-ns = <5000>;

	lcd: lcd@28 {
		compatible = "newhaven,nhd-0216k3z-nsw-bbw";
		reg = <0x28>;
		height = <2>;
		width = <16>;
		brightness = <8>;
	};

	rtc@68 {
		compatible = "dallas,ds3231";
		reg = <0x68>;
	};
};

&gmac1 {
	phy-mode = "rgmii";
	snps,phy-addr = <0xffffffff>; /* probe for phy addr */
	status = "okay";
};

&spi0 {
	status = "okay";

	flash0: n25q00@0 {
		compatible = "fm25v05";
		#address-cells = <1>;
		#size-cells = <1>;
		spi-max-frequency = <1000000>;
		spi-cpha;
		spi-cpol;
		reg = <0>;      /* chip select */
		m25p,fast-read;
	};
};

/{
	soc {
		leds {
			compatible = "gpio-leds";

			hps0 {
				label = "hps_led0";
				gpios = <&gpio0 0 1>;
			};

			hps1 {
				label = "hps_led1";
				gpios = <&gpio0 9 1>;
			};

			hps2 {
				label = "hps_led2";
				gpios = <&gpio1 20 1>;
			};

			hps3 {
				label = "hps_led3";
				gpios = <&gpio0 28 1>;
			};

			hps4 {
				label = "hps_led4";
				gpios = <&gpio1 3 1>;
			};

			hps5 {
				label = "hps_led5";
				gpios = <&gpio1 2 1>;
			};

			hps6 {
				label = "hps_led6";
				gpios = <&gpio1 19 1>;
				default-state = "on";
			};

			#if 0
			hps7 {
				label = "hps_led7";
				gpios = <&gpio1 0 1>;
			};

			hps8 {
				label = "hps_led8";
				gpios = <&gpio1 0 1>;
			};

			hps9 {
				label = "hps_led9";
				gpios = <&gpio1 9 1>;
			};
			#endif
		};

		gpio_keys {
			compatible = "gpio-keys-polled";
			#address-cells = <1>;
			#size-cells = <0>;
			poll-interval = <50>;
			/* autorepeat; */

			button@0 {
				debounce_interval = <50>;
				wakeup = <1>;
				linux,code = <0x100>;
				label = "pb0_s3";
				gpios = <&gpio2 21 1>;
			};
			button@1 {
				debounce_interval = <50>;
				wakeup = <1>;
				linux,code = <0x101>;
				label = "pb1_s4";
				gpios = <&gpio2 22 1>;
			};
			button@2 {
				debounce_interval = <50>;
				wakeup = <1>;
				linux,code = <0x102>;
				label = "pb2_s5";
				gpios = <&gpio2 23 1>;
			};
			button@3 {
				debounce_interval = <50>;
				wakeup = <1>;
				linux,code = <0x103>;
				label = "pb3_s6";
				gpios = <&gpio2 24 1>;
			};
	
		};

		onewire@0 {
			compatible = "w1-gpio";
			/*
			pinctrl-names = "default";
			pinctrl-0 = <&w1_gpio_pins>;
			*/
			status = "okay";
			gpios = <&gpio1 21 0>;
		};

		mmc: dwmmc0@ff704000 {
			pwr-en = <0>;
		};
	};
};

